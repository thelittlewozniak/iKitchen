@model onessaye.Models.POCO.User

@*Bisconti Flavian*@

@if(ViewBag.Error != null)
{
    <div>
        <ul>
            @foreach(string error in ViewBag.Error)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}
<div>
    @using (Html.BeginForm("Login","Home","post"))
    {
        <fieldset>
            <legend>Connexion</legend>
            @Html.LabelFor(model => model.Nickname)
            @Html.TextBoxFor(model => model.Nickname, new { Required = "Required"})
            <br/>
            @Html.LabelFor(model => model.Password)
            @Html.TextBoxFor(model => model.Password, new { Required = "Required", Type = "password"})
            <br/>
            <input type="submit" value="Log in"/>
        </fieldset>
    }
</div>
